

<%= f.select :group_id, @groups_array %>



<div class="images_wrapper d-inline-flex flex-wrap border border-primary rounded my-2 col-12">
  <% @groups.each_with_index { |group, i| %>

    <div class="col-wrapper col-3 col-md-2">
      <div class="avatar-image-card card m-1 align-items-center w-80">
        <%=  image_tag( 'groups/' + group.icon, class: 'avatar-image card-img-top mt-1', alt: 'Group icon')  %>
        <div class="card-body">
          <p class="avatar-image-text card-text text-break" ><%=  group.name  %></p>
        </div>
      </div>
    </div>
  <%  } %>
</div>
