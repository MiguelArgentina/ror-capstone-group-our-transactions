<section class="py-3 text-center container">
  <div class="row py-lg-3">
    <div class="col-12 mx-auto">


      <div class="border border-success rounded">

        <%= form_for @user do |f| %>
          <div class="container-fluid">
            <div class="row justify-content-center">
              <div class="d-flex justify-content-around my-1 w-75">
                <%= f.label :username %> <%= f.text_field :username, :class => 'border border-success ms-2 w-40' %>
              </div>
              <div class="d-flex justify-content-around my-1 w-75">
                <%= f.label :password %> <%= f.password_field :password, :class => 'border border-success ms-2 w-40' %>
              </div>
            </div>
          </div>

          <%= render 'layouts/icons', icons_url: @icons_url, f: f %>


          <%= f.submit  class: 'btn btn-success my-2 w-25' %>
        <% end %>
      </div>

      <div>

      </div>

    </div>
  </div>
</section>