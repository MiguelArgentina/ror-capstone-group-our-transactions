<section class="py-3 text-center container">
  <div class="row py-lg-3">
    <div class="col-12 mx-auto">


      <div class="border border-success rounded">

        <%= form_for @user do |f| %>
          <div class="container-fluid">
            <div class="row justify-content-center">
              <div class="d-flex justify-content-around my-1 w-75">
                <%= f.label :username, :class => 'sign-up-subtitle' %> <%= f.text_field :username, :class => 'border border-success ms-2 w-40' %>
              </div>
              <div class="d-flex justify-content-around my-1 w-75">
                <%= f.label :password, :class => 'sign-up-subtitle' %> <%= f.password_field :password, :class => 'border border-success ms-2 w-40' %>
              </div>
            </div>
          </div>

          <%= render 'layouts/icons', icons_url: @icons_url, f: f %>


          <div class="add-group-wrapper d-flex justify-content-around mt-5">

            <%= f.button :type => "submit", style: 'border-style: none; background-color: transparent;' do %>
              <div class="add-group-wrapper d-block">
                <i class="material-icons">save_alt</i>
              </div>
            <% end %>

            <%= link_to root_path, class: 'edit-profile-text text-decoration-none text-center' do %>
              <div class="add-group-wrapper d-block">
                <i class="material-icons">reply</i>
                <p>Back</p>
              </div>
            <% end %>

          </div>

      <% end %>
      </div>

      <div>

      </div>

    </div>
  </div>
</section>